<h1>Edit your profile</h1>
<%= form_for @player, html: {multipart: true} do |f| %>
<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
<div class="field">
  <%= f.label :password %>
  <%= f.password_field :password %>
</div>

<div class="field">
  <%= f.label :image %><br>
  <%= f.file_field :image %>
  <% if f.object.image? %>
    <%= image_tag f.object.image.thumb.url %>
    <%= f.label :remove_image %>
    <%= f.check_box :remove_image %>
  <% end %>
</div>

<h2>Profile Information:</h2>

<%= f.hidden_field :top_score, value: "0" %>

<div class="field">
  <p>What is your gender?
    <%= f.collection_select :gender, Characteristic.gender, :id, :characteristic_name, {prompt: "Select one"} %></p>
</div>

<div class="field">
  <p>What colour are your eyes?
    <%= f.collection_select :eye_colour, Characteristic.eye_colours, :id, :characteristic_name, {prompt: "Select your eye colour"} %></p>
</div>

<div class="field">
  <p>What colour is your hair?
    <%= f.collection_select :hair_colour, Characteristic.hair_colours, :id, :characteristic_name, {prompt: "Select your hair colour"} %></p>
</div>

<div class="">
  <p>Do you wear glasses?
    <%= f.collection_select :glasses, Characteristic.glasses, :id, :characteristic_name, {prompt: "Select one"} %></p>
</div>

<div class="field">
  <p>Do you have facial hair?
    <%= f.collection_select :facial_hair, Characteristic.facial_hair, :id, :characteristic_name, {prompt: "Select one"} %></p>
</div>

<div class="field">
  <p>Are you wearing a hat in your profile photo?
    <%= f.collection_select :wears_hat, Characteristic.wears_hat, :id, :characteristic_name, {prompt: "Select one"} %></p>
</div>

<div class="field">
  <p>What is your occupation?
    <%= f.collection_select :occupation, Characteristic.occupation, :id, :characteristic_name, {prompt: "Select one"} %></p>
</div>

<div class="actions">
  <%= f.submit %>
</div>

<% end %>
