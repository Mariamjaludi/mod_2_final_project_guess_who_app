<%= form_for @player, :url => '/signup' do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.collection_select :gender, Characteristic.gender, :id, :characteristic_name, {prompt: "Select your gender"} %><br>
  <p>What colour is your hair?</p>
  <%= f.collection_select :hair_colour, Characteristic.hair_colours, :id, :characteristic_name, {prompt: "Select your hair colour"} %><br>
  <p>What colour are your eyes?</p>
  <%= f.collection_select :eye_colour, Characteristic.eye_colours, :id, :characteristic_name, {prompt: "Select your eye colour"} %><br>
  <p>Do you wear glasses?</p>
  <%= f.collection_select :glasses, Characteristic.glasses, :id, :characteristic_name, {prompt: "Do you wear glasses?"} %><br>
  <p>Do you have facial hair?</p>
  <%= f.collection_select :facial_hair, Characteristic.facial_hair, :id, :characteristic_name, {prompt: "Do you have facial hair?"} %><br>
  <p>What is your occupation?</p>
  <%= f.collection_select :occupation, Characteristic.occupation, :id, :characteristic_name, {prompt: "Select your occupation"} %><br>
  <p>Are you wearing a hat in your profile photo?</p>
  <%= f.collection_select :wears_hat, Player.wears_hat, :id, :characteristic_name, {prompt: "Do you wear a hat?"} %><br><br>

  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.submit %>
<% end %>
